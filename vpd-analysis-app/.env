# Configuración CRÍTICA para hot reload estable
CI=false                    # CRÍTICO: Evita que warnings paren el servidor
GENERATE_SOURCEMAP=false   # Mejora performance y reduce crashes
SKIP_PREFLIGHT_CHECK=true  # Omite verificaciones de dependencias problemáticas

# Configuración adicional para estabilidad
FAST_REFRESH=true
ESLINT_NO_DEV_ERRORS=true
TSC_COMPILE_ON_ERROR=true
DISABLE_ESLINT_PLUGIN=true

# Puerto fijo
PORT=3002
BROWSER=none

# Configuración de desarrollo optimizada
REACT_APP_NODE_ENV=development
WDS_SOCKET_HOST=localhost
WDS_SOCKET_PORT=3002
CHOKIDAR_USEPOLLING=false
WATCHPACK_POLLING=false